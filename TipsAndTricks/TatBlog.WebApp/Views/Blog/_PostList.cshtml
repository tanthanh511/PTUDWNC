@model Post

@{
    var imageUrl = string.IsNullOrWhiteSpace(Model.ImageUrl)
            ? "/images/2.jpg"
            : $"/{Model.ImageUrl}";
}

<article class="blog-entry mb-4">
    <div class="card">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@imageUrl"
                    class="card-img"
                    alt="@Model.Title"/>
            </div>

            <div class="col-md-8">
                <div class="card-body">
                    <a asp-area=""
                        asp-controller="Blog"
                       asp-action="PostInfo"
                       asp-route-year="@Model.PostedDate.Year"
                       asp-route-month="@Model.PostedDate.Month"
                       asp-route-day="@Model.PostedDate.Day"
                       asp-route-slug="@Model.UrlSlug">
                    <h5 class="card-title">
                        @Model.Title
                    </h5>
                    </a>
                    <p class="card-text">
                        <!-- tác giả-->
                        <small class="text-muted">
                            Tác giả
                        </small>
                        <a asp-area=""
                            asp-controller="Blog"
                           asp-action="Author"
                           asp-route-slug="@Model.Author.UrlSlug">
                        <span class="text-primary">
                            @Model.Author.FullName
                        </span>
                        </a>
                        <!--chủ đề-->
                        <small class="text-muted">
                            Chủ đề
                        </small>
                        <a asp-area=""
                            asp-controller="Blog"
                           asp-action="Category"
                           asp-route-slug="@Model.Category.UrlSlug">
                        <span class="text-primary">
                            @Model.Category.Name
                        </span>
                        </a>
                    </p>
                    <p class="card-text">
                        @Html.Raw(Model.ShortDesciption)
                    </p>
                    <div class="tag-list">
                        <partial name="_TagList" model="@Model.Tags" />
                    </div>

                    <div class="text-end">
                        <a asp-area=""
                            asp-controller="Blog"
                           asp-action="PostInfo"
                           asp-route-year="@Model.PostedDate.Year"
                           asp-route-month="@Model.PostedDate.Month"
                           asp-route-day="@Model.PostedDate.Day"
                           asp-route-slug="@Model.UrlSlug"
                           class="btn btn-primary"
                           title="@Model.Title">
                           Xem chi tiết
                        </a>
                    </div>
                    <div class="share">
                        <a href="http://www.facebook.com/sharer.php?u=" class="btn btn-social btn-facebook link-in-popup">
                            <i class="fa fa-facebook"> </i>
                        </a>
                        <a href="https://twitter.com/share" class="btn btn-social btn-twitter">
                            <i class="fa fa-twitter"></i> 
                        </a>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

</article>
